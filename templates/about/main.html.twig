{% block main %}

<div class="container-fluid mt-3">
    <div class="row">
        <div class="col">
            <h1>Rules</h1>
        </div>
    </div>
</div>
<div class="container-fluid mt-3">
    <div class="row">
        <div class="col">
            <h2>What is allowed?</h2>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <ul class="list-group">
                {% for rule in allowed_rules %}
                    <li class="list-group-item">
                        <span>{{ rule.name }}</span>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>
<div class="container-fluid mt-3">
    <div class="row">
        <div class="col">
            <h2>What is not allowed?</h2>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <ul class="list-group">
                {% for rule in not_allowed_rules %}
                    <li class="list-group-item">
                        <span>{{ rule.name }}</span>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>
<div class="container-fluid mt-3">
    <div class="row">
        <div class="col">
            <h2>But What If?</h2>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <ul class="list-group">
                {% for whatif in but_what_if%}
                    <li class="list-group-item">
                        <span>{{ whatif.name }}</span>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>

{% endblock %}
