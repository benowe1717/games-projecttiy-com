{% block main %}

<div class="container mt-3 mb-3">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-10">
            <h1>Players</h1>
        </div>
    </div>
</div>

<div class="container mt-3 mb-3">
    {% for player in players%}
        <div class="row justify-content-center mt-3 mb-3">
            <div class="col-lg-8 col-xl-10">
                <div class="card">
                    {% if player.profilePicture is empty %}
                        <svg class="bd-placeholder-img card-img-top card-img-bottom" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" role="img">
                            <rect width="100%" height="100%" fill="#7d8184"></rect>
                        </svg>
                    {% else %}
                        <img src="{{ asset('images/players/'~player.profilePicture~'') }}" width="100%" height="100%" />
                    {% endif %}
                    <div class="card-body">
                        <h4 class="card-title">{{ player.name }}</h4>
                        <a class="btn btn-secondary" type="button" href="/players/{{ player.id }}">View Characters</a>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>

{% endblock %}
