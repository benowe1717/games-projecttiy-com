{% block main %}

<div class="container-fluid mt-3">
    <div class="row">
        <div class="col">
            <h1>Players</h1>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <ul class="list-group">
                {% for player in players %}
                    <li class="list-group-item">
                        <a class="list-group-link" href="/players/{{ player.id }}">{{ player.name }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>

{% endblock %}
