{% block main %}

<div class="container mt-3 mb-3">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-10">
            <h1>{{ character.name }}</h1>
            <p>Attempt Number: {{ current_attempt.attemptNumber }}</p>
            <p>Role: {{ character.role.name }}</p>
            <p>Primary Job: {{ character.primaryJob ? character.primaryJob.name : 'No assigned job!' }}</p>
            <p>Secondary Job: {{ character.secondaryJob ? character.secondaryJob.name : 'No assigned job!' }}</p>
        </div>
    </div>
</div>
<div class="container mt-3 mb-3">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-10">
            <div class="card">
                <svg class="bd-placeholder-img card-img-top" width="100%" height="360" xmlns="http://www.w3.org/2000/svg" role="img">
                    {% if character.profilePicture is empty %}
                        <rect width="100%" height="100%" fill="#868e96"></rect>
                    {% else %}
                        <img src="{{ character.profilePicture }}" width="100%" height="100%" />
                    {% endif %}
                </svg>
            </div>
            <div class="card-body mt-3 mb-3">
                    <p class="card-text">{{ character.name }} {{ character.bio }}</p>
            </div>
        </div>
    </div>
</div>
<div class="container mt-3 mb-3">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-10">
            <h1>Milestones Achieved</h1>
            <p>
                {% for milestone in milestones %}
                    {% if loop.last %}
                        {{ milestone.name }} ({{ milestone.description }})
                    {% else %}
                        {{ milestone.name }} ({{ milestone.description }}),
                    {% endif %}
                {% endfor %}
            </p>
        </div>
    </div>
</div>
<div class="container mt-3 mb-3">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-10">
            <h1>Character Details</h1>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-3">
            <div class="text-center d-flex flex-column justify-content-center align-items-center py-3">
                <div class="bs-icon-md bs-icon-circle bs-icon-primary d-flex flex-shrink-0 justify-content-center align-items-center d-inline-block mb-2 bs-icon lg">
                    <svg class="bi bi-smartwatch" xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M9 5a.5.5 0 0 0-1 0v3H6a.5.5 0 0 0 0 1h2.5a.5.5 0 0 0 .5-.5z"></path>
                        <path d="M4 1.667v.383A2.5 2.5 0 0 0 2 4.5v7a2.5 2.5 0 0 0 2 2.45v.383C4 15.253 4.746 16 5.667 16h4.666c.92 0 1.667-.746 1.667-1.667v-.383a2.5 2.5 0 0 0 2-2.45V8h.5a.5.5 0 0 0 .5-.5v-2a.5.5 0 0 0-.5-.5H14v-.5a2.5 2.5 0 0 0-2-2.45v-.383C12 .747 11.254 0 10.333 0H5.667C4.747 0 4 .746 4 1.667M4.5 3h7A1.5 1.5 0 0 1 13 4.5v7a1.5 1.5 0 0 1-1.5 1.5h-7A1.5 1.5 0 0 1 3 11.5v-7A1.5 1.5 0 0 1 4.5 3"></path>
                    </svg>
                </div>
                <div class="px-3">
                    {% if current_attempt.timePlayed >= 24 %}
                        <h4 class="fw-bold mb-0">{{ (current_attempt.timePlayed / 24)|format_number({fraction_digit: 2}) }} days</h4>
                    {% else %}
                        <h4 class="fw-bold mb-0">{{ current_attempt.timePlayed }} hours</h4>
                    {% endif%}
                    <p class="mb-0">Play Time</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="text-center d-flex flex-column justify-content-center align-items-center py-3">
                <div class="bs-icon-md bs-icon-circle bs-icon-primary d-flex flex-shrink-0 justify-content-center align-items-center d-inline-block mb-2 bs-icon lg">
                    <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16" class="bi bi-person-up">
                        <path d="M12.5 16a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7m.354-5.854 1.5 1.5a.5.5 0 0 1-.708.708L13 11.707V14.5a.5.5 0 0 1-1 0v-2.793l-.646.647a.5.5 0 0 1-.708-.708l1.5-1.5a.5.5 0 0 1 .708 0M11 5a3 3 0 1 1-6 0 3 3 0 0 1 6 0M8 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4"></path>
                        <path d="M8.256 14a4.474 4.474 0 0 1-.229-1.004H3c.001-.246.154-.986.832-1.664C4.484 10.68 5.711 10 8 10c.26 0 .507.009.74.025.226-.341.496-.65.804-.918C9.077 9.038 8.564 9 8 9c-5 0-6 3-6 4s1 1 1 1z"></path>
                    </svg>
                </div>
                <div class="px-3">
                    <h4 class="fw-bold mb-0">{{ current_attempt.adventureLevel }}</h4>
                    <p class="mb-0">Character Level</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container mt-3 mb-3">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-10">
            <h1>Previous Attempts</h1>
                {% for attempt in character.attempts %}
                    {% if attempt.isCurrent == 0 %}
                        <ul class="list-group">
                            <li class="list-group-item">
                                <a class="list-group-link">Previous Attempt #{{ attempt.attemptNumber }}</a>
                            </li>
                        </ul>
                    {% else %}
                        <p class="mb-4">No previous attempts!</p>
                    {% endif %}
                {% endfor %}
        </div>
    </div>
</div>

{% endblock %}
