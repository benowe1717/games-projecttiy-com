{% block main %}

<div class="container-fluid mt-3">
    <div class="row">
        <div class="col">
            <h1>player_name</h1>
            <p>Attempt Number: attempt_number</p>
        </div>
    </div>
</div>
<div class="container-fluid mt-3">
    <div class="row">
        <div class="col">
            <section class="py-4 py-xl-5">
                <div class="container">
                    <div class="bg-dark border rounded border-0 border-dark overflow-hidden">
                        <div class="row g-0">
                            <div class="col-md-6 order-first order-md-last">
                                <div class="text-white p-4 p-md-5">
                                    <h2 class="fw-bold text-white mb-3">character_name</h2>
                                    <p class="mb-4">character_description, role_description, job_description.</p>
                                </div>
                            </div>
                            <div class="col-md-6" style="min-height: 250px;">
                                <img class="w-100 h-100 fit-cover" src="https://cdn.bootstrapstudio.io/placeholders/1400x800.png">
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
<div class="container-fluid mt-3">
    <div class="row">
        <div class="col">
            <section class="py-4 py-xl-5">
                <div class="container">
                    <div class="text-white bg-dark border rounded border-0">
                        <h2 class="fw-bold text-white mb-3">Milestones Achieved and Player Details</h2>
                        <p class="mb-4">milestones_list</p>
                    </div>
                    <div class="text-white bg-dark border rounded border-0 mt-5">
                        <h2 class="fw-bold text-white mb-3">Cause of Death</h2>
                        <p class="mb-4">death_reason</p>
                    </div>
                </div>
            </section>
        </div>
    </div>
    <div class="row gy-4 row-cols-2 row-cols-md-4 justify-content-center">
        <div class="col">
            <div class="text-center d-flex flex-column justify-content-center align-items-center py-3">
                <div class="bs-icon-md bs-icon-circle bs-icon-primary d-flex flex-shrink-0 justify-content-center align-items-center d-inline-block mb-2 bs-icon lg">
                    <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16" class="bi bi-smartwatch">
                        <path d="M9 5a.5.5 0 0 0-1 0v3H6a.5.5 0 0 0 0 1h2.5a.5.5 0 0 0 .5-.5z"></path>
                        <path d="M4 1.667v.383A2.5 2.5 0 0 0 2 4.5v7a2.5 2.5 0 0 0 2 2.45v.383C4 15.253 4.746 16 5.667 16h4.666c.92 0 1.667-.746 1.667-1.667v-.383a2.5 2.5 0 0 0 2-2.45V8h.5a.5.5 0 0 0 .5-.5v-2a.5.5 0 0 0-.5-.5H14v-.5a2.5 2.5 0 0 0-2-2.45v-.383C12 .747 11.254 0 10.333 0H5.667C4.747 0 4 .746 4 1.667M4.5 3h7A1.5 1.5 0 0 1 13 4.5v7a1.5 1.5 0 0 1-1.5 1.5h-7A1.5 1.5 0 0 1 3 11.5v-7A1.5 1.5 0 0 1 4.5 3"></path>
                    </svg>
                </div>
                <div class="px-3">
                    <h4 class="fw-bold mb-0">play_time</h4>
                    <p class="mb-0">Play Time</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="text-center d-flex flex-column justify-content-center align-items-center py-3">
                <div class="bs-icon-md bs-icon-circle bs-icon-primary d-flex flex-shrink-0 justify-content-center align-items-center d-inline-block mb-2 bs-icon lg">
                    <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16" class="bi bi-person-up">
                        <path d="M12.5 16a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7m.354-5.854 1.5 1.5a.5.5 0 0 1-.708.708L13 11.707V14.5a.5.5 0 0 1-1 0v-2.793l-.646.647a.5.5 0 0 1-.708-.708l1.5-1.5a.5.5 0 0 1 .708 0M11 5a3 3 0 1 1-6 0 3 3 0 0 1 6 0M8 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4"></path>
                        <path d="M8.256 14a4.474 4.474 0 0 1-.229-1.004H3c.001-.246.154-.986.832-1.664C4.484 10.68 5.711 10 8 10c.26 0 .507.009.74.025.226-.341.496-.65.804-.918C9.077 9.038 8.564 9 8 9c-5 0-6 3-6 4s1 1 1 1z"></path>
                    </svg>
                </div>
                <div class="px-3">
                    <h4 class="fw-bold mb-0">character_level</h4>
                    <p class="mb-0">Character Level</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid mt-3">
    <div class="row">
        <div class="col">
            <h1>Previous attempts</h1>
            {% if previous_attempts|length > 0 %}
                <ul class="list-group">
                    {% for attempt in previous_attempts %}
                        <li class="list-group-item">
                            <a class="list-group-link" href="/players/{{ player_id }}/previous/{{ attempt.id }}">Previous Attempt #{{ attempt.number }}</a>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <p class="mb-4">No previous attempts!</p>
            {% endif %}
        </div>
    </div>
</div>

{% endblock %}
